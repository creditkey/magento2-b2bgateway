<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <!-- Payment Method Facade configuration -->
    <virtualType name="CreditkeyB2BGatewayFacade" type="Magento\Payment\Model\Method\Adapter">
        <arguments>
            <argument name="code" xsi:type="const">\Creditkey\B2BGateway\Model\Ui\ConfigProvider::CODE</argument>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Creditkey\B2BGateway\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">CreditkeyB2BGatewayValueHandlerPool</argument>
            <argument name="commandPool" xsi:type="object">CreditkeyB2BGatewayCommandPool</argument>
        </arguments>
    </virtualType>

    <!-- Configuration reader -->
    <virtualType name="CreditkeyB2BGatewayConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">\Creditkey\B2BGateway\Model\Ui\ConfigProvider::CODE</argument>
        </arguments>
    </virtualType>

    <!-- Logger, initialized with CreditkeyB2BGatewayConfig -->
    <virtualType name="CreditkeyB2BGatewayLogger" type="Magento\Payment\Model\Method\Logger">
        <arguments>
            <argument name="config" xsi:type="object">CreditkeyB2BGatewayConfig</argument>
        </arguments>
    </virtualType>

    <type name="Creditkey\B2BGateway\Gateway\Http\Client\ClientMock">
        <arguments>
            <argument name="logger" xsi:type="object">CreditkeyB2BGatewayLogger</argument>
        </arguments>
    </type>

    <!-- Commands infrastructure -->
    <virtualType name="CreditkeyB2BGatewayCommandPool" type="Magento\Payment\Gateway\Command\CommandPool">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="authorize" xsi:type="string">CreditkeyB2BGatewayAuthorizeCommand</item>
                <item name="capture" xsi:type="string">CreditkeyB2BGatewayCaptureCommand</item>
                <item name="void" xsi:type="string">CreditkeyB2BGatewayVoidCommand</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Authorize command -->
    <virtualType name="CreditkeyB2BGatewayAuthorizeCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">CreditkeyB2BGatewayAuthorizationRequest</argument>
            <argument name="handler" xsi:type="object">CreditkeyB2BGatewayResponseHandlerComposite</argument>
            <argument name="transferFactory" xsi:type="object">Creditkey\B2BGateway\Gateway\Http\TransferFactory</argument>
            <argument name="client" xsi:type="object">Creditkey\B2BGateway\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Authorization Request -->
    <virtualType name="CreditkeyB2BGatewayAuthorizationRequest" type="Magento\Payment\Gateway\Request\BuilderComposite">
        <arguments>
            <argument name="builders" xsi:type="array">
                <item name="transaction" xsi:type="string">Creditkey\B2BGateway\Gateway\Request\AuthorizationRequest</item>
                <item name="mockData" xsi:type="string">Creditkey\B2BGateway\Gateway\Request\AuthorizationDataRequest</item>
            </argument>
        </arguments>
    </virtualType>
    <type name="Creditkey\B2BGateway\Gateway\Request\AuthorizationRequest">
        <arguments>
            <argument name="config" xsi:type="object">CreditkeyB2BGatewayConfig</argument>
        </arguments>
    </type>

    <!-- Capture command -->
    <virtualType name="CreditkeyB2BGatewayCaptureCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Creditkey\B2BGateway\Gateway\Request\CaptureRequest</argument>
            <argument name="handler" xsi:type="object">Creditkey\B2BGateway\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Creditkey\B2BGateway\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Creditkey\B2BGateway\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Creditkey\B2BGateway\Gateway\Http\Client\ClientCapture</argument>
        </arguments>
    </virtualType>

    <!-- Capture Request -->
    <type name="Creditkey\B2BGateway\Gateway\Request\CaptureRequest">
        <arguments>
            <argument name="config" xsi:type="object">CreditkeyB2BGatewayConfig</argument>
        </arguments>
    </type>

    <!-- Void command -->
    <virtualType name="CreditkeyB2BGatewayVoidCommand" type="Magento\Payment\Gateway\Command\GatewayCommand">
        <arguments>
            <argument name="requestBuilder" xsi:type="object">Creditkey\B2BGateway\Gateway\Request\VoidRequest</argument>
            <argument name="handler" xsi:type="object">Creditkey\B2BGateway\Gateway\Response\TxnIdHandler</argument>
            <argument name="transferFactory" xsi:type="object">Creditkey\B2BGateway\Gateway\Http\TransferFactory</argument>
            <argument name="validator" xsi:type="object">Creditkey\B2BGateway\Gateway\Validator\ResponseCodeValidator</argument>
            <argument name="client" xsi:type="object">Creditkey\B2BGateway\Gateway\Http\Client\ClientMock</argument>
        </arguments>
    </virtualType>

    <!-- Void Request -->
    <type name="Creditkey\B2BGateway\Gateway\Request\VoidRequest">
        <arguments>
            <argument name="config" xsi:type="object">CreditkeyB2BGatewayConfig</argument>
        </arguments>
    </type>

    <!-- Response handlers -->
    <virtualType name="CreditkeyB2BGatewayResponseHandlerComposite" type="Magento\Payment\Gateway\Response\HandlerChain">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="init" xsi:type="string">Creditkey\B2BGateway\Gateway\Response\InitHandler</item>
                <item name="txnid" xsi:type="string">Creditkey\B2BGateway\Gateway\Response\TxnIdHandler</item>
                <item name="fraud" xsi:type="string">Creditkey\B2BGateway\Gateway\Response\FraudHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <!-- Value handlers infrastructure -->
    <virtualType name="CreditkeyB2BGatewayValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">CreditkeyB2BGatewayConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>
    <virtualType name="CreditkeyB2BGatewayConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">CreditkeyB2BGatewayConfig</argument>
        </arguments>
    </virtualType>

    <type name="Creditkey\B2BGateway\Block\Info">
        <arguments>
            <argument name="config" xsi:type="object">CreditkeyB2BGatewayConfig</argument>
        </arguments>
    </type>

</config>
